{
  "name": "gdonkey-extension",
  "private": true,
  "scripts": {
    "install": "npm run apply -- npm i",
    "start": "webpack && concurrently -k \"npm:watch\" \"web-ext run\"",
    "build": "webpack && web-ext build",
    "apply": "func() { cd background && \"$@\" && cd ../content && \"$@\" &&  cd ../popup && \"$@\" && cd ..; }; func",
    "lint": "web-ext lint",
    "watch": "webpack --watch"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/plugin-transform-runtime": "^7.11.5",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-react": "^7.10.4",
    "babel-loader": "^8.2.2",
    "clean-webpack-plugin": "^3.0.0",
    "concurrently": "^5.3.0",
    "copy-webpack-plugin": "^6.3.2",
    "css-loader": "^5.0.1",
    "dotenv-webpack": "^6.0.0",
    "file-loader": "^6.2.0",
    "html-loader": "^1.3.2",
    "html-webpack-plugin": "^4.5.0",
    "style-loader": "^2.0.0",
    "ts-loader": "^8.0.11",
    "web-ext": "^5.1.0",
    "web-ext-types": "^3.2.1",
    "webpack": "^5.9.0",
    "webpack-cli": "^4.2.0"
  }
}
